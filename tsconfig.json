{
  "compilerOptions": {
    "declaration": false,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
